<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/friends_item_minheight">
    
    <TextView
        android:id="@+id/friends_letter"
        style="@style/friendsListCatalog"
        android:layout_height="wrap_content" />

    <LinearLayout
        style="@style/friendsListItem"
        android:layout_height="wrap_content"
        android:paddingRight="4dip" 
        android:background="@drawable/listitem_bg" >
	    <ImageView
	        android:id="@+id/friends_list_imageview"
	        android:layout_width="@dimen/friends_item_image_width"
	        android:layout_height="@dimen/friends_item_image_width"
	        android:contentDescription="@string/friends_list_image"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="10dip"
	        android:layout_gravity="center_vertical" />
	 
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:descendantFocusability="blocksDescendants"
	        android:layout_height="60dip"
	        android:orientation="vertical" >
	 
	        <TextView
	            android:id="@+id/friends_list_name"
	            android:layout_width="wrap_content"
	            android:layout_height="0.0dip"
	            android:gravity="center_vertical"
	            android:textColor="@color/black"
	            android:textStyle="bold"
	            android:layout_weight="1" />
	 
	        <TextView
	            android:id="@+id/friends_list_content"
	            android:layout_width="wrap_content"
	            android:layout_height="0.0dip"
	            android:gravity="center_vertical"
	            android:singleLine="true"
	            android:textColor="@color/friends_list_content"
	            android:ellipsize="end"
	            android:layout_weight="1" />
	         
	    </LinearLayout>
    </LinearLayout>
 
</LinearLayout>